<h1>Update your Commission</h1>

<% if @user.errors.full_messages.any? %>
  <% @user.errors.full_messages.each do |error_message| %>
    <%= error_message if @user.errors.full_messages.first == error_message %> <br />
  <% end %>
<% end %>

<%= form_for(@costume) do |f| %>
  <%= f.label "New Title",  class: "control-label" %>
  <%= f.text_field :title %>
    <br>
    <br>
  <%= f.label "New Style",  class: "control-label" %>
   <%= f.select :style,  
   {
      "Full Suits:" => [["plantigrade full", "plantigrade"], ["digigrade full", "digigrade"]],
      "Suit Parts:" => [["head", "head"], ["tail", "tail"], ["hand-paws", "hand_paws"], ["feet-paws", "feed_paws"], ["mini-partial suit", "mini_partial"], ["3/4 partial suit", "3_4ths"]]
    }, selected: "plantigrade full" %> 
    <br>
    <br>
  <%= f.label "I understand that changing the style of suit I'm requesting may incure an additional cost or a work compensation cost if you downgrade from a bigger commission request depending on your selected designer:",  class: "control-label" %>
  <%= f.check_box :style %>
    <br>
    <br>
  <%= f.label :reference_sheet %>
  <%= f.text_field :reference_sheet %>
    
  <%= f.submit "Update" %>
<% end %>